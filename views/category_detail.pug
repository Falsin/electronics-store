extends layout

block content 
  h1 Category: #{title}

  .description 
    h2 Description
    p #{category.description}

  div 
    h4 Inventory
      if collection
        ul
          each val in collection 
            li 
              a(href=val.url) #{val.title}

      p This category has no inventory

      .buttons 
        a(href=`${category.title}/create`) Add #{category.title}
        a(href=`${category.title}/update`) Update category
        a(href=`${category.title}/delete`) Delete category